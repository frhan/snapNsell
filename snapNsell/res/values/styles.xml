<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SnapNSellNoTheme" parent="@android:style/Theme.Holo.NoActionBar"></style>

    <style name="SnapNSellTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SnapNSellActionBar</item>
    </style>

    <style name="SnapNSellActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#0a1733</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:titleTextStyle">@style/SnapNSellTheme.ActionBar.TitleTextStyle</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>       
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SnapNSellTheme.ActionBar.MenuTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SnapNSellTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>